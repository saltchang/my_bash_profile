# Shortcut command
alias f='open -a Finder ./'
alias c='clear'

# Replace "rm" command to trash for safety
alias rm='echo "Please use the command: \"junk\" for safety."'
junk() {
    mv "$1" ~/.Trash/
}

cl() {
    cd "$1" && la
}

clearTrash() {
    \rm -rf ~/.Trash/*
}

